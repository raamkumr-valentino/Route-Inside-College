<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="6dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_id"
        android:elevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content"
                android:src="@drawable/tce_main_building" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Thiagarajar College of Engineering"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="22sp" />
            <ImageView
                android:id="@+id/tym_id"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/title"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_schedule_black_18dp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toEndOf="@+id/tym_id"
                android:maxLines="2"
                android:padding="8dp"
                android:text="Time"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/ins_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tym_id"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:lineSpacingExtra="5dp"
                android:textColor="#222"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ins_id"
                android:id="@+id/share_text"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:text="@string/share"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ins_id"
                android:layout_alignStart="@+id/share_text"
                android:id="@+id/place_info"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:text="@string/place_info"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>